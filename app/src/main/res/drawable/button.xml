<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#ffbb22"/>
            <padding
                android:top="-20dp"
                android:bottom="-10dp"
                android:left="-10dp"
                android:right="-10dp"
                />
            <stroke
                android:width="1dp"
                android:color="#aaa"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>

            <stroke android:width="3dp"
                android:color="#222"
                />
        </shape>


    </item>
</selector>
